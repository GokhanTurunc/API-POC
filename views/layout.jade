doctype 5
html(ng-app='poc', lang='tr')

    head
        link(rel='stylesheet', href='third_party/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='assets/css/style.css')
        script.
            function onProductImageError(img) {
                img.src = 'http://www.n11.com/static/images/layout/no-image.jpg';
            }
        link(rel='stylesheet', href='third_party/Swipe/style.css')
        meta(name='viewport', content='width=640, initial-scale=1.0,user-scalable=no')
        meta(name='charset', content='UTF-8')

    body

        div.wrapper(ng-view)

        input(type='hidden', id='deviceId', value='#{deviceId}')
        input(type='hidden', id='forgeryToken', value='#{forgeryToken}')

        script(src='third_party/angular.min.js')
        script(src='third_party/jquery-2.0.3.min.js')
        script(src='third_party/Swipe/swipe.js')
        script(src='app/app.js')
